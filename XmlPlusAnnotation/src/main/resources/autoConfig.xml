<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

   <context:annotation-config/>

    <bean name="address" class="org.example.Address">
        <constructor-arg value="62"/>
        <constructor-arg value="Noida"/>
        <constructor-arg value="UP"/>
    </bean>
    <bean name="address2" class="org.example.Address2">
        <constructor-arg value="57"/>
        <constructor-arg value="Kalkaji"/>
        <constructor-arg value="New Delhi"/>
    </bean>
   <bean id="student" class="org.example.Student">
</bean>
    </beans>